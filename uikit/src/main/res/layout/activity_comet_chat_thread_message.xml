<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="message"
            type="com.cometchat.pro.models.BaseMessage" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        tools:context="screen.CometChatThreadMessageActivity">
        <RelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.cometchat.pro.uikit.Avatar
                android:layout_width="50dp"
                android:id="@+id/av_user"
                app:avatar="@{message.sender.avatar}"
                tools:src="@tools:sample/avatars"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/av_user"
                tools:text="@tools:sample/full_names"
                android:id="@+id/tv_username"
                android:text="@{message.sender.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/tv_username"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/av_user"
                tools:text="@tools:sample/date/ddmmyy"
                android:id="@+id/tv_messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/user_layout"
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_textMessage"
                tools:text="@string/loremIpsum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_imageMessage"
                tools:src="@tools:sample/backgrounds/scenic"
                android:layout_width="wrap_content"
                android:layout_height="250dp"/>
            <VideoView
                android:id="@+id/vv_videoMessage"
                android:layout_width="wrap_content"
                android:layout_height="250dp"/>
            <RelativeLayout
                android:id="@+id/rl_fileMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:padding="16dp">

                <TextView
                    android:layout_toRightOf="@+id/file_type_layout"
                    android:id="@+id/tvFileName"
                    android:layout_width="wrap_content"
                    tools:text="File Name"
                    android:textColor="@color/primaryTextColor"
                    android:focusable="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLength="15"
                    android:paddingTop="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:maxWidth="250dp"
                    android:focusableInTouchMode="true"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignStart="@+id/tvFileName"
                    android:layout_below="@+id/tvFileName"
                    android:id="@+id/tvFileSize"
                    tools:text="10MB"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:id="@+id/file_type_layout"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivIcon"
                        android:src="@drawable/ic_insert_drive_file_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvFileExtension"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="PDF"
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/colorPrimary"
                        android:visibility="visible" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/thread_message_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></RelativeLayout>
    </RelativeLayout>
</layout>