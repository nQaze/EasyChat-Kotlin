<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:visibility="gone"
    tools:visibility="visible"
    android:background="@drawable/left_border_rmessage"
    android:layout_height="wrap_content"
    android:minWidth="120dp"
    android:id="@+id/replyLayout"
    android:alpha="0.7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/reply_user_info"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:maxLines="1"
            android:textColor="@color/textColorWhite"
            android:ellipsize="end"
            android:id="@+id/reply_user"
            tools:text="@tools:sample/full_names"
            android:textStyle="bold"
            android:maxWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_toRightOf="@+id/reply_user"
            android:id="@+id/reply_media"
            android:layout_marginLeft="16dp"
            tools:src="@tools:sample/avatars"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>
    <TextView
        android:layout_below="@+id/reply_user_info"
        android:textStyle="italic"
        android:maxLines="3"
        android:ellipsize="end"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:drawableTint="@color/textColorWhite"
        android:id="@+id/reply_message"
        android:maxWidth="200dp"
        tools:text="@string/replyTxt"
        android:textColor="@color/textColorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>